doctype html
html
	head
		script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
		link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.1/css/materialize.min.css")
	body
		nav.teal.lighten-2
			ul#nav-mobile.right.hide-on-med-and-down
				li: a(href='/') Home
				li: a(href='/users/' + user.username) Profile
				li.active: a(href='#') My Posts
				li: a(href='/posts') All Posts
				li: a(href='/logout') Logout
				
		div.container
			if userPosts.length != 0
				each post in userPosts
					div.row
						div.col.s12
							div.card.blue-grey.darken-1
								div.card-content.white-text
									ul
										h3: a(href='/posts/' + post.id): li.white-text #{post.title}
										li= post.body
										br
										li Click the title to view the post in more detail
			else
				h1 You didn't make any posts yet!
				br
			script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.1/js/materialize.min.js")
